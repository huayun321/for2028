<script>
  $(document).ready(function() {
    SENSORO.init();
    SENSORO.share({title:'2048', desc:'2048desc'}, function(err, ret) {
      if(err) {
        console.log('share err', err);
      } else {
        console.log('share ret', ret);
      }
    });

//    SENSORO.getVisitorInfo(function(err, ret) {
//      if(err) {
//        console.log('getVisitorInfo err', err);
//      } else {
//        console.log('getVisitorInfo ret', ret);
//      }
//    });

    SENSORO.setDic({});

    SENSORO.getDic(function(err,ret){});





    function myFunction(event, score, cardId) {
      console.log('append score');
      var el = document.createElement('a');
      el.innerHTML = score;
      el.onclick = function(event){
        SENSORO.take(cardId, function(err, ret) {
          if(err) {
            console.log('take err, ', err);
          } else {
            console.log('take ret, ', ret);
          }
          event.target.className += ' ' + 'gift-container-win';
        });

      };
      el.className = 'gift-container';
      $('.gifts-container').append(el);
      $('.gifts-container a').css("margin-right", "5px");
    }
    EventBus.addEventListener("won", myFunction);




  });
</script>

